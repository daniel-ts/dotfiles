[{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    // "height": 20, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    // "exclusive": false,
    // Choose the order of the modules
    "modules-left": [
        "custom/logo",
        "sway/mode",
        "sway/workspaces",
    ],
    "modules-center": [],
    "modules-right": [
        "network",
        "clock",
        "pulseaudio#sound",
        "pulseaudio#icon",
        "temperature",
        "cpu",
        "battery",
        "battery#bat2",
        "backlight#value",
        "backlight#icon",
        "custom/pacman-package-count",
        "custom/icon-cube",
        "tray"
    ],
    "sway/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "tray": {
        "icon-size": 21,
        "spacing": 10
    },
    "clock": {
        // "timezone": "America/New_York",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format": "{:%H:%M:%S}",
        "format-alt": "{:%d %B, %Y}",
        "interval": 1,
    },
    "cpu": {
        "format": "{usage}%  Ôãõ",
        "tooltip": false
    },
    "memory": {
        "format": "{}% ÔÉâ"
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        "format-critical": "{temperatureC}¬∞C  {icon}",
        "format": "{temperatureC}¬∞C  {icon}",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
    },
    "backlight#icon": {
        // "device": "acpi_video1",
        "format": "{icon}",
        "format-icons": ["ÔÜÖ", "ÔÑë"],
        "on-click": "ctl-backlight.waybar.sh down"
    },
    "backlight#value": {
        // "device": "acpi_video1",
        "format": "{percent}",
        "on-click": "ctl-backlight.waybar.sh up"
    },
    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}%  {icon}",
        "format-charging": "{capacity}%  Ôóß",
        "format-plugged": "{capacity}%  Ôá¶",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "battery#bat2": {
        "bat": "BAT2"
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        // "format-wifi": "{bandwidthUpBits} <span color='limegreen'>ÔÅ¢</span><span color='limegreen'>ÔÅ£</span> {bandwidthDownBits}   Ôá´",
        "format-wifi": "Ôá´",
        "format-ethernet": "Ôûñ",
        "format-linked": "(No IP) Ôûñ",
        "format-disconnected": "Ôá´",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "interval": 1,
        "signal": 1
    },
    "pulseaudio#sound": {
        "format": "{volume}",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
    },
    "pulseaudio#icon": {
        // "scroll-step": 1, // %, can be a float
        "format": "{icon}",
        "format-bluetooth": "{icon}Ôäî",
        "format-bluetooth-muted": "Ôö© {icon}Ôäî",
        "format-muted": "Ôö©",
        "format-source-muted": "ÔÑ±",
        "on-click": "pactl set-sink-mute 0 toggle",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
    },

    "sway/workspaces": {
        "disable-scroll": true,
        "all-outputs": false,
    },

    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },

    "custom/logo": {
        "format": "Ôûº"
    },

    "custom/icon-cube": {
        "format": "ÔÜ≤"
    },

    "custom/pacman-package-count": {
        "format": "{}",
        "exec": "echo `pacman -Qe | wc -l`",
        "interval": 3600
    }
}]
