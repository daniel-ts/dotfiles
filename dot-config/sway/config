for_window [app_id="quake_kitty" title="^quake_kitty$"] {
           border none
           floating enable
           #move container to scratchpad
           move container to output current
           resize set 100 ppt 50 ppt
           move position 0 px 0 px
           mark --add "quake_kitty"
           sticky enable
}


